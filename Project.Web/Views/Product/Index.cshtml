@using Project.API.Models.Products.DTOs;

@{
    ViewData["Title"] = "Index";
}
@model List<ProductDto>
    <table class="table table-striped">
        <thead>
            <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Description</td>
            <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model != null){
            @foreach (var item in Model)
            {
                <tr>
               <td>@item.Id</td>
                <td>@item.Name</td>
                 <td>@item.Price</td>
                   <td>@item.Description</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                          <a class="btn btn-danger" asp-controller="Product" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                        </td>
                     </tr>
            }
            }
        </tbody>
    </table>


@section Scripts
{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
}